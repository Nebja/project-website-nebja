{% block body %}
    <p>
        {% if error %}
            {{ error }}
        {% else %}
            An email was just sent that contains a link that you can use to reset your password.
            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
        {% endif%}
    </p>
{% endblock %}
